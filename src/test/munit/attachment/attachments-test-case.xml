    <!-- Tests -->
    <munit:test name="downloadAttachment" description="Downloads an attachment from the server" ignore="#[Munit::muleVersionPriorTo('4.1.2')]">
        <munit:execution>
            <wsc:consume config-ref="${config}" operation="downloadAttachment">
                <wsc:message>
                    <wsc:body>
                        #[
                        %dw 2.0
                        output application/xml
                        ns con http://service.soap.service.mule.org/
                        ---
                        con#downloadAttachment: {
                            fileName: "${attachmentName}"
                        }]
                    </wsc:body>
                </wsc:message>
            </wsc:consume>
            <set-payload value="#[output text/plain --- payload.attachments['${attachmentName}']]" />
        </munit:execution>
        <munit:validation>
            <munit-tools:assert-equals actual="#[payload]" expected="#['Simple Attachment Content\n']"/>
        </munit:validation>
    </munit:test>

    <munit:test name="uploadAttachment" description="Uploads an attachment to the server" ignore="#[Munit::muleVersionPriorTo('4.1.2')]">
        <munit:execution>
            <set-variable variableName="attachmentContent" value="#[output text/plain --- 'Some Content']" />
            <wsc:consume config-ref="${config}" operation="uploadAttachment">
                <wsc:message>
                    <wsc:body>
                        #[
                        %dw 2.0
                        output application/xml
                        ns con http://service.soap.service.mule.org/
                        ---
                        con#uploadAttachment: {}
                        ]
                    </wsc:body>
                    <wsc:attachments>
                        #[{ attachment: vars.attachmentContent } ]
                    </wsc:attachments>
                </wsc:message>
            </wsc:consume>
        </munit:execution>
        <munit:validation>
            <munit-tools:assert-equals actual="#[payload.body.uploadAttachmentResponse.result]" expected="#['OK']"/>
        </munit:validation>
    </munit:test>

    <munit:test name="optionalAttachment" description="Downloads optional attachment from the server" ignore="#[Munit::muleVersionPriorTo('4.1.2')]">
        <munit:execution>
            <wsc:consume config-ref="${config}" operation="downloadAttachment">
                <wsc:message>
                    <wsc:body>
                        #[
                        %dw 2.0
                        output application/xml
                        ns con http://service.soap.service.mule.org/
                        ---
                        con#downloadAttachment: {
                        }]
                    </wsc:body>
                </wsc:message>
            </wsc:consume>
        </munit:execution>
        <munit:validation>
            <munit-tools:assert-equals actual="#[sizeOf(payload.attachments)]" expected="#[0]"/>
        </munit:validation>
    </munit:test>

    <munit:test name="replyWithAttachment" description="Handle reply which contains an attachment" ignore="#[Munit::muleVersionPriorTo('4.1.2')]">
        <munit:execution>
            <set-variable variableName="mtomEnabled" value="${mtomEnabled}" />
            <choice>
                <when expression="#[vars.mtomEnabled == 'true']">
                    <wsc:handle-reply config-ref="${config}" operation="downloadAttachment">
                        <wsc:response contentType='multipart/related; type="application/xop+xml"; start="&lt;rootpart@soapui.org&gt;"; start-info="text/xml"; boundary="----=_Part_21_1210100687.1593035795882"' >
                            <wsc:body ><![CDATA[------=_Part_21_1210100687.1593035795882
Content-Type: application/xop+xml; charset=UTF-8; type="text/xml"
Content-Transfer-Encoding: 8bit
Content-ID: <rootpart@soapui.org>

<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:ser="http://service.soap.service.mule.org/">
   <soapenv:Header xmlns:wsa="http://www.w3.org/2005/08/addressing"><wsa:Action>downloadAttachment</wsa:Action><wsa:RelatesTo RelationshipType="http://www.w3.org/2005/08/addressing/reply">uuid:7a8228a1-0beb-409e-8fe7-92833e19a972</wsa:RelatesTo><wsa:To>http://localhost:8081/some</wsa:To></soapenv:Header>
   <soapenv:Body>
      <ser:downloadAttachmentResponse>
         <attachment><inc:Include href="cid:1271018540948" xmlns:inc="http://www.w3.org/2004/08/xop/include"/></attachment>
      </ser:downloadAttachmentResponse>
   </soapenv:Body>
</soapenv:Envelope>
------=_Part_21_1210100687.1593035795882
Content-Type: text/plain; charset=us-ascii
Content-Transfer-Encoding: 7bit
Content-ID: <attachment.txt>
Content-Disposition: attachment; name="attachment.txt"

Simple Attachment Content
------=_Part_21_1210100687.1593035795882--]]></wsc:body>
                        </wsc:response>
                    </wsc:handle-reply>
                </when>
                <otherwise >
                    <wsc:handle-reply config-ref="${config}" operation="downloadAttachment">
                        <wsc:response contentType='multipart/related; type="text/xml"; start="&lt;rootpart@soapui.org&gt;"; boundary="----=_Part_1_736085595.1593528925587"' >
                            <wsc:body ><![CDATA[------=_Part_1_736085595.1593528925587
Content-Type: text/xml; charset=UTF-8
Content-Transfer-Encoding: 8bit
Content-ID: <rootpart@soapui.org>

<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:ser="http://service.soap.service.mule.org/">
   <soapenv:Header/>
   <soapenv:Body>
      <ser:downloadAttachmentResponse>
         <attachment>U2ltcGxlIEF0dGFjaG1lbnQgQ29udGVudAo=</attachment>
      </ser:downloadAttachmentResponse>
   </soapenv:Body>
</soapenv:Envelope>
------=_Part_1_736085595.1593528925587--]]></wsc:body>
                        </wsc:response>
                    </wsc:handle-reply>
                </otherwise>
            </choice>
            <set-payload value="#[output text/plain --- payload.attachments['${attachmentName}']]" />
        </munit:execution>
        <munit:validation>
            <munit-tools:assert-equals actual="#[payload]" expected="#['Simple Attachment Content\n']"/>
        </munit:validation>
    </munit:test>
